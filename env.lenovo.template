DEVICE=cuda
TORCH_DTYPE=bfloat16

# === GENERATION SETTINGS ===
MAX_LENGTH=32000
DEFAULT_MAX_TOKENS=8192
DEFAULT_TEMPERATURE=0.7

# === SERVICE SETTINGS ===
